{% extends "layout.html.twig" %}

{% block title %}{{ billet.title }}{% endblock %}

{% block content %}
    <p>
    <h2>{{ billet.title }}</h2>
    <p>{{ billet.content }}</p>

    <h3>Comments</h3>
    {% for comment in comments %}
        <div class="panel panel-default" id=""comment-{{ comment.id }}>
            <strong>{{ comment.author.username }}</strong> said : {{ comment.content }}<br>
            <a class="btn btn-primary">Answer</a>
                {% if answerForm %}
                    {{ form_start(answerForm) }}
                    <div class="form-group">
                        {{ form_errors(answerForm.content) }}
                        {{ form_widget(answerForm.content, { 'attr':  {
                            'rows': '4',
                            'class': 'form-control',
                            'placeholder': 'Enter your comment'
                        }}) }}
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary reply" value="Publish comment" data-id=""{{ comment.id }} />
                    </div>
                    {{ form_end(answerForm) }}
                    {% for flashMessage in app.session.flashbag.get('success') %}
                        <div class="alert alert-success">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                {% else %}
                    <a href="{{ path('login') }} ">Log in</a> to add comments.
                {% endif %}
        </div>
    {% else %}
        No comments yet.
    {% endfor %}

    <h3>Add a comment</h3>
    {% if commentForm %}
        {{ form_start(commentForm) }}
            <div class="form-group">
                {{ form_errors(commentForm.content) }}
                {{ form_widget(commentForm.content, { 'attr':  {
                    'rows': '4',
                    'class': 'form-control',
                    'placeholder': 'Enter your comment'
                }}) }}
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Publish comment" />
            </div>
        {{ form_end(commentForm) }}
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
    {% else %}
        <a href="{{ path('login') }} ">Log in</a> to add comments.
    {% endif %}
    </p>
{% endblock %}
